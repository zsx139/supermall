.toCar .iconfont{
  font-size: 35px;
}
.toCar .carNum{
  width: 30rpx;
  height: 30rpx;
  border-radius: 30rpx;
  background-color:red;
  position: fixed;
  top: 410rpx;
  right: -36rpx;
  color:#ffffff;
  text-align: center;
  line-height:30rpx;
  font-size: 20rpx;
  transition: 0.5s;
}
.particulars_lists view:nth-child(2){
  width: 72% !important;
}
.bottom_btn{
  background-color: #ffffff;
}
.item_img{
  position: relative;
}
.item_img image{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.newSwiper{
  position: fixed;
  top: -164rpx;
  left: 0;
}
.goodsSize{
  background-color: #ffffff;
  transform: translateY(-40rpx);
}
.goodsMessage{
  background-color: #ffffff;
