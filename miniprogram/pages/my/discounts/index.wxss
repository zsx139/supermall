/* miniprogram/pages/my/discounts/index.wxss */
.discounts{
  width:90%;
  height: 137px;
  margin: 0 auto;
  position: relative;
}
.discounts image{
  position: absolute;
  top: 0;
  left: 0;
  z-index: 9;
}
.discounts .discounts_text{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 99;
  margin: 0 auto;
  color: #000000;
  box-sizing: border-box;
  padding-top:60rpx;
  text-align: center;
}
.discounts .discounts_text .discounts_text_title{
  font-weight: 600;
  font-size:50rpx;
  margin-bottom:10rpx;
}
.discounts .discounts_text .discounts_text_text,.discounts_text_time{
  font-size:22rpx;
}
.haveDeenUsed{
  background-color: #000000;
  opacity: 0.3;
}