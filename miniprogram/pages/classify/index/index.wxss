/* miniprogram/pages/classify/index/index.wxss */
.leftList{
  width: 25%;
  height: 100%;
  text-align: center;
  /* background-color: #F8F8F8; */
  background-color:#ffffff;
  float: left;
  font-size: 30rpx;
  position: fixed;
  /* box-sizing: border-box; */
  padding-top:30px;
  padding-bottom:830rpx;
  z-index: 999;
}
.leftList .tabnavY{
  position: absolute;
  top: 15px;
  left: -12rpx;
  display: block;
  width: 20rpx;
  height: 30rpx;
  border-radius:20rpx;
  background-color: red;
  transition: .2s;

}
.leftList view{
  width: 100%;
  padding: 30rpx 0;
  color:#000000;
  position: relative;
  font-weight: bold;
}
.leftList view.active{
  /* font-weight: bold;
  color: #000000; */
  font-size:27px;
  background-color: #ffffff;
}
.rightLIst{
  width: 75%;
  float: right;
  box-sizing: border-box;
  margin-bottom:90rpx;
  padding-bottom:env(safe-area-inset-bottom);
}
.rightLIst_title .til_text{
  font-size: 28rpx !important;
}
.rightLIst_title{
  font-size: 24rpx;
}
/* 微调下更多箭头的位置 */
.rightLIst_title .iconfont{
  display: inline-block;
  transform: translateY(1px);
  font-size: 15px;
}
.titles{
  width: 100%;
  text-align: center;
}
.xiangXiBox_fanGe{
  width: 100%;
  height: 17px;
}
.box_shadow{
  box-shadow-bottom: 10px #FFF; 
  -moz-box-shadow: 0px 4px 16px rgb(196, 186, 186);
  -webkit-box-shadow: 0px 4px 16px rgb(196, 186, 186);
  box-shadow-bottom: 5px rgb(196, 186, 186);
}