/* miniprogram/pages/shoppingCart/orderForm/index.wxss */
.TkaeGooodsSite{
  width: 100%;
  /* height: 115px; */
  padding: 20px 0;
  box-sizing: border-box;
  border-color:#F3F3F3;
}
.TkaeGooodsSite .icon{
  width: 10%;
  height: 100%;
  text-align: center;
}
.TkaeGooodsSite .icon .iconfont{
    font-size: 18px;
}
.TkaeGooodsSite .userMessage{
  width: 80%;
}
.borderStyle{
  width: 100%;
  height: 3px;
  position: relative;
}
.borderStyle image{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.userMessage view:nth-child(1) text:nth-child(1){
  font-size: 28rpx;
  display: inline-block;
  margin-right:10px;
  font-weight: bold;
}
.userMessage view:nth-child(1) text:nth-child(2){
  font-size: 24rpx;
  color:#9A9A9A;
}
.userMessage view:nth-child(2){
  font-size: 26rpx;
  margin-top:10px;
}
/* 商品 */
.goods{
  width: 100%;
  padding: 10px;
  /* height: 130px; */
  box-sizing: border-box;
}
.goods .imgs{
  width: 30%;
  height: 100%;
}
.goods .texts{
  width: 70%;
  height: 100%;
  box-sizing: border-box;
  padding-left:10px;
}
.goods .texts view{
  font-size: 28rpx;
}
.goods .texts view:nth-child(2){
  color: #9A9A9A;
  margin: 10px 0 20px 0;
}
.goods .texts view:nth-child(3) .money{
  float: right;
}
.goods .texts view:nth-child(3) .money text{
  font-size: 36rpx;
  font-weight: bold;
}
.particulars_lists view:nth-child(2){
  width: 70% !important;
  font-size: 24rpx;
}
.particulars_lists view:nth-child(1){
  width: 30% !important;
}
.particulars_lists view:nth-child(2) .iconfont{
  transform:translateY(1px);
  display: inline-block;
  margin-left:10px;
}
/* 备注  */
.remark{
  width: 100%;
  box-sizing: border-box;
  padding: 5px 10px;
  font-size: 12px;
  background-color: #F8F8F8;
  color: #6E6E6E;
}
.select_box .offs{
  text-align: right;
  font-size: 14px;
}
.particulars_lists view:nth-child(1){
  width: 60%;
}
.particulars_lists view:nth-child(2){
  width: 40%;
}
.bottom_btn{
  display: flex;
  justify-content: center;
  align-items: center;
}
.radios view:nth-child(1){
  width: 40% !important;
}
.payment .radios view:nth-child(1){
  width: 30% !important;
}
.payment .radios view:nth-child(1) .iconfont{
  color:#09BB07;
  font-size:40rpx;
  margin-right:10rpx;
  transform:translateY(4rpx);
  display:inline-block;
}
.radios view:nth-child(2){
  width: 60% !important;
}
.radios .shipFeeRadios{
  /* transform: translateY(-20rpx); */
  margin-left:-130rpx;
}
.payment .radios view:nth-child(2){
  width: 70% !important;
}
.select_box .particulars_lists{
  padding: 0;
}
.select_box .particulars_lists view:nth-child(1){
  font-size:30rpx;
}
scroll-view{
  margin-bottom:100px;
}
.distribution{
  padding: 20px 10px;
}
.distribution view:nth-child(1){
  font-weight: bold;
  font-size: 35rpx;
}
.distribution view:nth-child(2){
  font-size: 30rpx;
}
.payment{
  width: 90%;
  bottom:580rpx;
  margin: 0 38rpx;
  border-radius:20rpx;
  padding-bottom:0;
}
.payment .particulars_lists{
  width: 100%;
}
.payment .radios view:nth-child(2){
  transform: translateX(-90rpx);
}
.payment .btn{
  /* margin-bottom: -40rpx; */
}